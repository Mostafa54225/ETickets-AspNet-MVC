@model Cinema

@{
    ViewData["Title"] = "Cinema Details";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 style="text-align: center;">Details For @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group">
                    @if (Model.Logo != null)
                    {
                        <img class="rounded-circle" src="data:image;base64,@System.Convert.ToBase64String(Model.Logo)" alt="@Model.Name" style="max-width: 150px" />
                    }
                    else
                    {
                        <img class="rounded-circle" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="@Model.Name" style="max-width: 150px" />
                    }
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Update</a>
                    <a class="btn btn-outline-secondary" asp-action="index">View All</a>
                </div>

            </div>
        </div>
    </div>
</div>